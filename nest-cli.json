{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "public/",
        "watchAssets": true
      },
      {
        "include": "views/**/*.hbs",
        "watchAssets": true
      }
    ],
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  }
}
